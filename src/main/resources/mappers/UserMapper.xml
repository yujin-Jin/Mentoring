<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hello.hellospring.dao.UserDao">
    <select id="selectUser" resultType="hello.hellospring.dto.UserDto">
        SELECT
        `id`
        , `name`
        , `birth_day`
        FROM user
    </select>
    <insert id="insertUser">
        INSERT INTO user
        (
        `name`
        , `birth_day`
        )
        VALUES
        (
        #{userDto.name}
        ,#{userDto.birth_day}
        )
    </insert>
    <update id="updateUser">
        UPDATE user
        SET
        `name` = #{userDto.name}
        , `birth_day` = #{userDto.birth_day}
        WHERE
            `id` = #{userDto.id}
    </update>
    <delete id="deleteUser" parameterType="int">
        DELETE FROM user
        WHERE
            `id` = #{id}
    </delete>
</mapper>